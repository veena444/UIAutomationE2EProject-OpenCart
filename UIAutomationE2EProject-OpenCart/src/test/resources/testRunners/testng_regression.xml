<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Opencart App Test Regression Suite" verbose="4" thread-count="6" parallel="tests">

	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
	</listeners>

	<test name="Login Page Test">
		<parameter name="browser" value="chrome"></parameter>
		<parameter name="browserversion" value="126.0"></parameter>
		<parameter name="testname" value="Login Page Test"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="LoginPage Negative Test">
		<parameter name="browser" value="chrome"></parameter>
		<parameter name="browserversion" value="125.0"></parameter>
		<parameter name="testname" value="LoginPage Negative Test"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageNegativeTest" />
		</classes>
	</test>

	<test name="Accounts Page Test">
		<parameter name="browser" value="chrome"></parameter>
		<parameter name="browserversion" value="113.0"></parameter>
		<parameter name="testname" value="Accounts Page Test"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="Register Page Test">
		<parameter name="browser" value="chrome"></parameter>
		<parameter name="browserversion" value="125.0"></parameter>
		<parameter name="testname" value="Register Page Test"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.RegisterPageTest" />
		</classes>
	</test>


	<test name="ProductInfo Page Test">
		<parameter name="browser" value="firefox"></parameter>
		<parameter name="browserversion" value="100.0"></parameter>
		<parameter name="testname" value="ProductInfo Page Test"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>

	<test name="ShoppingCart Page Test">
		<parameter name="browser" value="firefox"></parameter>
		<parameter name="browserversion" value="124.0"></parameter>
		<parameter name="testname" value="ShoppingCart Page Test"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.ShoppingCartPageTest" />
		</classes>
	</test>
	
</suite> 